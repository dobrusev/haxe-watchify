{
  "name": "haxe-watchify",
  "version": "1.3.0",
  "description": "automatic build tool for your Haxe and OpenFL projects. It monitors the changes in your files and runs the build of your projects",
  "author": "luca mezzalira",
  "license": "MIT",
  "dependencies": {
    "ansi-to-html": "^0.3.0",
    "chalk": "^1.0.0",
    "chokidar": "1.0.5",
    "commander": "^2.8.1",
    "livereloadx": "^0.3.8",
    "socket.io": "^1.3.6"
  },
  "scripts": {
    "test": "istanbul test jasmine spec/**/*.js",
    "testAndCoverage": "npm run test --coverage",
    "static-analysis": "plato -r -d report src",
    "gen-change-log": "github_changelog_generator lucamezzalira/haxe-watchify"
  },
  "engines": {
    "node": ">=0.10"
  },
  "bin": {
    "haxe-watchify": "src/haxe-watchify.js"
  },
  "devDependencies": {
    "istanbul": "^0.3.17",
    "jasmine": "^2.3.1",
    "plato": "^1.5.0"
  },
  "keywords": [
    "haxe",
    "watchify",
    "haxe-watchify",
    "CI",
    "tool",
    "utility",
    "nme",
    "build",
    "openFL",
    "hx",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucamezzalira/haxe-watchify.git"
  }
}
