{
  "name": "haxe-watchify",
  "version": "1.1.0",
  "description": "automatic build tool for your Haxe and OpenFL projects. It monitors the changes in your files and runs the build of your Haxe and OpenFL projects",
  "author": "luca mezzalira",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.0.0",
    "chokidar": "^1.0.3",
    "commander": "^2.8.1"
  },
  "scripts": {
    "test": "jasmine spec/**/*.js && npm run static-analysis",
    "static-analysis": "plato -r -d report src"
  },
  "engines": {
    "node": ">=0.10"
  },
  "bin": {
    "haxe-watchify": "src/haxe-watchify.js"
  },
  "devDependencies": {
    "jasmine": "^2.3.1",
    "plato": "^1.5.0"
  },
  "keywords":[
    "haxe",
    "watchify",
    "haxe-watchify",
    "CI",
    "tool",
    "utility",
    "nme",
    "build",
    "openFL"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucamezzalira/haxe-watchify.git"
  }
}
